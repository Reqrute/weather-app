{
    "extends": ["standard", "standard-react", "prettier",
     "prettier/react","eslint:recommended",
     "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:@typescript-eslint/strict",
    "plugin:cypress/recommended"],
    
    "plugins": ["prettier", "react-hooks", "cypress","jest","@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "jest": true,
      "cypress/globals": true
    },
    "rules": {
      "@typescript-eslint/no-unnecessary-type-assertion": 2,
      "@typescript-eslint/prefer-nullish-coalescing": false,
      "@typescript-eslint/strict-boolean-expressions": false,
      "arrow-parens": ["error", "as-needed"],
      "semi": "error",
      "prefer-destructuring": "error",
      "max-len": [
        "warn",
        {
          "code": 150,
          "ignoreUrls": true,
          "ignorePattern": "import"
        }
      ],
      "no-unused-vars": "warn",
      "operator-linebreak": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react/jsx-closing-tag-location": 2,
      "react/jsx-closing-bracket-location": "off",
      "react/jsx-max-props-per-line": [
        2,
        {
          "maximum": 2,
          "when": "always"
        }
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [".jsx",".js",".tsx",".ts"]
        }
      ],
      "jsx-quotes": ["error", "prefer-double"],
      "comma-dangle": [2, "always-multiline"],
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ],
      "react/prop-types": "off",
      "react/jsx-fragments": [1, "element"]
    },
    "overrides": [
      {
        "files": ["src/index.js","*.ts", "*.tsx"],
        "rules": {
          "react/jsx-filename-extension": "off",
          "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
          ],
    
          "parserOptions": {
            "project": ["./tsconfig.json"]
            // Specify it only for TypeScript files
          },
          "prettier/prettier": [
            "error",
            {
              "singleQuote": true
            }
          ]
        }
      }
    ]
  }